<article>
  <div class="conteudo">
    <form action="/profile/edit/:<%= cadastro._id %>" method="post">
      <div class="intro">
        <img class="fotoPerfil" src="/profile.png" />
        <div class="nome">
          <input value="<%= cadastro.nome %>" type="text" name="nome" />

          <input
            type="text"
            name="sobrenome"
            value="<%= cadastro.sobrenome %>"
          />
        </div>
      </div>

